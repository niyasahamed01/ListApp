<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="textColor" format="color" />

    <!-- Base application theme. -->
    <style name="Theme.ListingApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="textColor">@color/textColorLight</item>

    </style>

    <style name="TextAppearance.ListApp.TextView.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="TextAppearance.ListApp.TextView.Small" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:fontFamily">@font/robotomedium</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="Theme.ListingApp.NoActionBar" parent="Theme.ListingApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ListingApp.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>